
<h1><%= @user.name %>
<div>
<div id="user-photo"><img class="img-responsive"<%= image_tag @user.image.url if @user.image.url.present?%>></div>


</br>
</br>
</br>

<div class="container-fluid">
	<div class="row">
		
			<% @user.activities.each do |a| %>
			<div class="col-lg-offset-3 col-md-offset-2 col-lg-2 col-md-3 col-sm-3">
				<div class="panel panel-success">
				 	<div class="panel-body">
						
						<%= image_tag a.image.url(:thumb) %> </br>
						<%= a.name %> </br>
						<%= a.date %> </br>
						<%= link_to "View", activity_path(a) %>
					</div>
				</div>
			</div>
		
		<%end%>
	</div>
</div>

<div class="btn-group" role="group">
  	<% if @user == current_user || current_user.admin %>
		  <button type="button" class="btn btn-default"><%= link_to "Edit", edit_user_path %></button>
		  <button type="button" class="btn btn-default"><%= link_to "Delete User", :user, method: :delete, data:{ confirm: "Are you sure you want to delete this user? All information associated with this user will be deleted!"} %></button>
	<%end%>  	 
</div>
