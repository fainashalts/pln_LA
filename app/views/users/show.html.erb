
<div class="jumbotron">
	<h1>Welcome, <%= current_user.name %>!</h1>	
</div>

<div>
<span><%= image_tag @user.image.url(:thumb) if @user.image.url.present?%></span>
<span><%=@user.name%></span>


<div class="container-fluid">
	<div>
		<% @user.activities.each do |a| %>
			<%= image_tag a.image.url(:thumb) %> 
			<%= a.name %>
			<%= a.date %>
			<%= a.location%>
			<%= a.description %>
		<%end%>
	</div>
	<div class="btn-group" role="group" aria-label="...">
	  <button type="button" class="btn btn-default"><%= link_to "Edit", edit_user_path %></button>
	  <button type="button" class="btn btn-default"><%= link_to "Delete User", :user, method: :delete, data:{ confirm: "Are you sure you want to delete this user? All information associated with this user will be deleted!"} %></button>
	  <button type="button" class="btn btn-default"><%= link_to "Back to Activities List", activities_path %></button>
	</div>
</div>