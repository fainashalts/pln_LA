<div class="container">
	<div class="row">
		<div class="col-lg-offset-4 col-md-offset-2 col-lg-4 col-md-8">
			<div class="panel panel-success">
				<div class="panel-body">
					<h1>Log In</h1>
					<%= form_for :login do |f| %>
						<div>
							<%= f.label :email, "Email:" %>
							<%= f.text_field :email %>
						</div>
						<div>
							<%= f.label :password, "Password" %>
							<%= f.password_field :password %>
						</div>
						<%= f.submit "Log In" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
