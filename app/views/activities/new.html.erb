<div class="container">
	<div class="row">
		<div class="col-lg-offset-4 col-md-offset-2 col-lg-4 col-md-8">
			<div class="panel panel-success">
				<div class="panel-body">
					<h1>Add Activities Here!</h1>

					<%= form_for @activity do |a| %>

						
						Name: <%= a.text_field :name %></br>
						
						Date: <%= a.text_field :date %></br>
						
						Location: <%= a.text_field :location %></br>
						
						Headline: <%= a.text_field :headline %></br>

						Description: <%= a.text_area :description %></br>

						Image: <%= a.file_field :image %></br>

						<%= a.submit "Add Activity!" %>
					<%end%>

					<%= link_to "Back to Activities", activities_path %>
				</div>
			</div>
		</div>
	</div>
</div>
	